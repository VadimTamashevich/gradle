gradle -v                                             <-- просмотреть установленную версию gradle
gradle build --dry-run                                <-- выполняет билд с указанием всех тасков которые были выполнены и их состояния
gradle task --all                                     <-- печать всех таксов доступных для проекта
gradle {project}:dependencies                         <-- печать дерева зависимостей
gradle build --include-build ../{путь к проекту}      <-- запускает билд текущего проекта вместе с указанным
gradle {имя пролекта}:dependencyInsight -- dependency {имя зависимости} --configuration {имя конфигурации зависимости}